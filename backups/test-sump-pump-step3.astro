---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// Test with FAQ data containing colons
const service = {
  name: "Sump Pump Installation",
  title: "Sump Pump Guide Toronto",
  price: {
    starting: "$1,200",
    range: "$1,200 - $4,500"
  }
};

const faqs = [
  {
    question: "What is a sump pump?",
    answer: "A sump pump is an automatic water removal device. It has these main types - submersible pumps, pedestal pumps, battery backup pumps, and water-powered pumps."
  },
  {
    question: "How much does it cost?",
    answer: "Professional installation ranges from $1,200 to $4,500 depending on system complexity."
  }
];

const startingPrice = service.price.starting;
---

<BaseLayout title={service.name}>
  <Header />
  
  <section class="hero-section">
    <div class="container">
      <h1>{service.title}</h1>
      <div class="price-box">
        <span class="price-value">{startingPrice}</span>
        <span class="price-label">Starting Price</span>
      </div>
      
      <div class="mt-4">
        <a href="/quote" class="bg-orange-600 hover:bg-orange-700 text-white px-6 py-3 rounded-md inline-block">Get Quote</a>
      </div>
    </div>
  </section>
  
  <section class="faq-section">
    <div class="container">
      <h2>Frequently Asked Questions</h2>
      {faqs.map((faq) => (
        <div class="faq-item">
          <h3>{faq.question}</h3>
          <p>{faq.answer}</p>
        </div>
      ))}
    </div>
  </section>
  
  <Footer />
</BaseLayout>

<style>
  .hero-section {
    padding: 4rem 0;
    background-color: #f7fafc;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  h1 {
    font-size: 3rem;
    margin-bottom: 2rem;
  }
  
  h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }
  
  .price-box {
    background-color: white;
    padding: 2rem;
    border-radius: 0.5rem;
    text-align: center;
  }
  
  .price-value {
    display: block;
    font-size: 2rem;
    font-weight: bold;
    color: #f97316;
  }
  
  .price-label {
    display: block;
    font-size: 0.875rem;
    color: #6b7280;
    text-transform: uppercase;
    margin-top: 0.5rem;
  }
  
  .faq-section {
    padding: 4rem 0;
    background-color: #f7fafc;
  }
  
  .faq-item {
    background-color: white;
    padding: 1.5rem;
    margin-bottom: 1rem;
    border-radius: 0.5rem;
  }
  
  .faq-item h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }
</style>