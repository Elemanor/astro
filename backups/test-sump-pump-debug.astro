---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// Test with simple object
const service = {
  name: "Sump Pump Installation",
  title: "Sump Pump Guide Toronto",
  subtitle: "Professional Installation Service",
  description: "Complete sump pump guide for Toronto homeowners",
  startingPrice: "$1,200",
  priceRange: "$1,200 - $4,500"
};

// Simple FAQ without colons in answers
const faqs = [
  {
    question: "What is a sump pump?",
    answer: "A sump pump is an automatic water removal device installed in your basement"
  },
  {
    question: "How much does it cost?",
    answer: "Professional installation ranges from $1,200 to $4,500"
  }
];
---

<BaseLayout title={service.name}>
  <Header />
  
  <section class="service-hero">
    <div class="container">
      <h1>{service.title}</h1>
      <p>{service.subtitle}</p>
      <p>{service.description}</p>
      
      <div class="stats">
        <div class="stat-card">
          <span class="stat-value">{service.startingPrice}</span>
          <span class="stat-label">Starting Price</span>
        </div>
      </div>
    </div>
  </section>
  
  <section class="faq">
    <div class="container">
      <h2>FAQs</h2>
      {faqs.map((faq) => (
        <div class="faq-item">
          <h3>{faq.question}</h3>
          <p>{faq.answer}</p>
        </div>
      ))}
    </div>
  </section>
  
  <Footer />
</BaseLayout>

<style>
  .service-hero {
    padding: 4rem 0;
    background: #f7fafc;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .stat-card {
    background: white;
    padding: 2rem;
    border-radius: 0.5rem;
    text-align: center;
    margin: 2rem 0;
  }
  
  .stat-value {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    color: #f97316;
  }
  
  .stat-label {
    display: block;
    font-size: 0.875rem;
    color: #6b7280;
    text-transform: uppercase;
  }
  
  .faq {
    padding: 4rem 0;
  }
  
  .faq-item {
    margin-bottom: 2rem;
    padding: 1rem;
    background: #f7fafc;
    border-radius: 0.5rem;
  }
</style>