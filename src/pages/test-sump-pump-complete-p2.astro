  <section class="service-faq">
    <div class="container">
      <h2>Frequently Asked Questions About Sump Pumps - Complete Guide</h2>
      <div class="faq-grid">
        {serviceFaqs.map((faq, index) => (
          <div class="faq-item">
            <h3><span class="faq-number">{index + 1}.</span> {faq.question}</h3>
