---
import MainLayout from '../../layouts/MainLayout.astro';

const serviceName = "Sump Pump Installation";
const serviceDescription = "Professional sump pump installation in Toronto";
const startingPrice = "$1,200";
---

<MainLayout title={serviceName} description={serviceDescription}>
  <div class="container mx-auto px-4 py-12">
    <article class="max-w-4xl mx-auto">
      <header class="mb-12">
        <h1 class="text-4xl lg:text-5xl font-bold mb-4">{serviceName}</h1>
        <p class="text-xl text-gray-600">{serviceDescription}</p>
      </header>
      
      <div class="bg-gray-100 p-6 rounded-lg mb-8">
        <div class="text-center">
          <span class="text-3xl font-bold text-orange-600">{startingPrice}</span>
          <span class="block text-sm text-gray-600 mt-2">Starting Price</span>
        </div>
      </div>
      
      <div class="prose max-w-none">
        <h2>About Our Service</h2>
        <p>We provide professional sump pump installation services in Toronto and the GTA.</p>
      </div>
    </article>
  </div>
</MainLayout>