---
import BaseLayout from '../layouts/BaseLayout.astro';
import { ScrollAnimation } from '../components/ScrollAnimation';
---

<BaseLayout 
  title="24/7 Emergency Waterproofing Toronto - DrySpace"
  description="Emergency basement flooding? We respond in 2 hours. 24/7 water removal, emergency pumping, and permanent solutions. Call now: (437) 545-0067"
>
  <section class="py-12">
    <div class="container mx-auto px-4">
      <!-- Emergency Hero -->
      <div class="bg-red-600 text-white rounded-xl p-8 mb-12">
        <ScrollAnimation animation="fadeUp" client:visible>
          <div class="text-center">
            <div class="inline-flex items-center gap-2 bg-white/20 px-4 py-2 rounded-full text-sm font-semibold mb-4">
              <span class="animate-pulse">🚨</span> EMERGENCY SERVICE AVAILABLE NOW
            </div>
            <h1 class="text-4xl md:text-5xl font-bold mb-4">
              Basement Flooding? We're Here 24/7
            </h1>
            <p class="text-xl mb-8 opacity-90">
              Emergency response within 2 hours anywhere in Toronto & GTA
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="tel:4375450067" class="bg-white text-red-600 px-8 py-4 rounded-lg font-bold text-xl hover:bg-gray-100 transition-colors inline-flex items-center justify-center gap-2">
                <svg class="w-6 h-6 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                CALL NOW: (437) 545-0067
              </a>
            </div>
          </div>
        </ScrollAnimation>
      </div>

      <!-- Emergency Services -->
      <div class="mb-12">
        <ScrollAnimation animation="fadeUp" client:visible>
          <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Immediate Emergency Response</h2>
        </ScrollAnimation>
        
        <div class="grid md:grid-cols-3 gap-6">
          {[
            {
              icon: "💧",
              title: "Water Extraction",
              time: "Within 2 Hours",
              features: [
                "Industrial pumps & extractors",
                "Complete water removal",
                "Prevent further damage",
                "Document for insurance"
              ]
            },
            {
              icon: "🔧",
              title: "Emergency Repairs",
              time: "Same Day",
              features: [
                "Stop active leaks",
                "Temporary waterproofing",
                "Foundation crack sealing",
                "Sump pump replacement"
              ]
            },
            {
              icon: "🏗️",
              title: "Permanent Solutions",
              time: "Next Day",
              features: [
                "Complete assessment",
                "Permanent waterproofing",
                "Warranty coverage",
                "Prevention systems"
              ]
            }
          ].map((service, index) => (
            <ScrollAnimation animation="zoomIn" delay={index * 0.1} client:visible>
              <div class="bg-white rounded-xl shadow-lg p-6 border-2 border-red-100 hover:border-red-300 transition-colors">
                <div class="text-4xl mb-3">{service.icon}</div>
                <h3 class="text-xl font-bold text-gray-900">{service.title}</h3>
                <p class="text-red-600 font-semibold mb-4">{service.time}</p>
                <ul class="space-y-2">
                  {service.features.map(feature => (
                    <li class="flex items-start gap-2 text-sm text-gray-700">
                      <span class="text-green-500">✓</span>
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>
            </ScrollAnimation>
          ))}
        </div>
      </div>

      <!-- What To Do Now -->
      <div class="bg-yellow-50 border-2 border-yellow-200 rounded-xl p-8 mb-12">
        <ScrollAnimation animation="fadeUp" client:visible>
          <h2 class="text-2xl font-bold text-gray-900 mb-6">⚡ What To Do Right Now</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="font-bold text-lg mb-3">Immediate Safety Steps:</h3>
              <ol class="space-y-2 text-gray-700">
                <li class="flex gap-2">
                  <span class="font-bold">1.</span>
                  <span>Turn off electricity to affected areas</span>
                </li>
                <li class="flex gap-2">
                  <span class="font-bold">2.</span>
                  <span>Stop using water fixtures if possible</span>
                </li>
                <li class="flex gap-2">
                  <span class="font-bold">3.</span>
                  <span>Move valuables to higher ground</span>
                </li>
                <li class="flex gap-2">
                  <span class="font-bold">4.</span>
                  <span>Document damage with photos</span>
                </li>
                <li class="flex gap-2">
                  <span class="font-bold">5.</span>
                  <span>Call us immediately: (437) 545-0067</span>
                </li>
              </ol>
            </div>
            <div>
              <h3 class="font-bold text-lg mb-3">What NOT To Do:</h3>
              <ul class="space-y-2 text-gray-700">
                <li class="flex gap-2">
                  <span class="text-red-500">✗</span>
                  <span>Don't enter deep water areas</span>
                </li>
                <li class="flex gap-2">
                  <span class="text-red-500">✗</span>
                  <span>Don't use electrical appliances</span>
                </li>
                <li class="flex gap-2">
                  <span class="text-red-500">✗</span>
                  <span>Don't wait - mold grows in 24-48 hours</span>
                </li>
                <li class="flex gap-2">
                  <span class="text-red-500">✗</span>
                  <span>Don't attempt major repairs yourself</span>
                </li>
              </ul>
            </div>
          </div>
        </ScrollAnimation>
      </div>

      <!-- Response Times -->
      <div class="mb-12">
        <ScrollAnimation animation="fadeUp" client:visible>
          <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Guaranteed Response Times</h2>
        </ScrollAnimation>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {[
            { area: "Downtown Toronto", time: "30-60 min", icon: "🏙️" },
            { area: "North York", time: "45-90 min", icon: "🏘️" },
            { area: "Scarborough", time: "60-90 min", icon: "🏡" },
            { area: "Etobicoke", time: "45-75 min", icon: "🏠" },
            { area: "Mississauga", time: "60-90 min", icon: "🌆" },
            { area: "Brampton", time: "75-120 min", icon: "🏢" },
            { area: "Vaughan", time: "60-90 min", icon: "🏗️" },
            { area: "Richmond Hill", time: "75-120 min", icon: "🏛️" }
          ].map((location, index) => (
            <ScrollAnimation animation="fadeUp" delay={index * 0.05} client:visible>
              <div class="bg-white rounded-lg shadow p-4 text-center hover:shadow-lg transition-shadow">
                <div class="text-2xl mb-2">{location.icon}</div>
                <h3 class="font-bold">{location.area}</h3>
                <p class="text-red-600 font-semibold">{location.time}</p>
              </div>
            </ScrollAnimation>
          ))}
        </div>
      </div>

      <!-- Emergency Equipment -->
      <div class="bg-gray-50 rounded-xl p-8 mb-12">
        <ScrollAnimation animation="fadeUp" client:visible>
          <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Professional Emergency Equipment</h2>
        </ScrollAnimation>
        
        <div class="grid md:grid-cols-3 gap-6">
          <ScrollAnimation animation="fadeLeft" client:visible>
            <div>
              <h3 class="font-bold text-lg mb-3">Water Removal</h3>
              <ul class="space-y-2 text-gray-700">
                <li>• Industrial submersible pumps</li>
                <li>• Truck-mounted extractors</li>
                <li>• Portable sump pumps</li>
                <li>• Water claw flood extractors</li>
              </ul>
            </div>
          </ScrollAnimation>
          
          <ScrollAnimation animation="fadeUp" client:visible>
            <div>
              <h3 class="font-bold text-lg mb-3">Drying Equipment</h3>
              <ul class="space-y-2 text-gray-700">
                <li>• Industrial dehumidifiers</li>
                <li>• High-velocity air movers</li>
                <li>• Moisture meters</li>
                <li>• Thermal imaging cameras</li>
              </ul>
            </div>
          </ScrollAnimation>
          
          <ScrollAnimation animation="fadeRight" client:visible>
            <div>
              <h3 class="font-bold text-lg mb-3">Repair Materials</h3>
              <ul class="space-y-2 text-gray-700">
                <li>• Hydraulic cement</li>
                <li>• Injection resins</li>
                <li>• Waterproofing membranes</li>
                <li>• Emergency sealants</li>
              </ul>
            </div>
          </ScrollAnimation>
        </div>
      </div>

      <!-- Insurance Help -->
      <div class="bg-blue-50 rounded-xl p-8 mb-12">
        <ScrollAnimation animation="fadeUp" client:visible>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">🏦 We Work With Your Insurance</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="font-bold mb-3">We Provide:</h3>
              <ul class="space-y-2 text-gray-700">
                <li class="flex gap-2">
                  <span class="text-green-500">✓</span>
                  <span>Detailed damage documentation</span>
                </li>
                <li class="flex gap-2">
                  <span class="text-green-500">✓</span>
                  <span>Photos and moisture readings</span>
                </li>
                <li class="flex gap-2">
                  <span class="text-green-500">✓</span>
                  <span>Written repair estimates</span>
                </li>
                <li class="flex gap-2">
                  <span class="text-green-500">✓</span>
                  <span>Direct insurance billing</span>
                </li>
              </ul>
            </div>
            <div>
              <h3 class="font-bold mb-3">Common Coverage:</h3>
              <ul class="space-y-2 text-gray-700">
                <li>• Sudden water damage</li>
                <li>• Sewer backup (with rider)</li>
                <li>• Storm-related flooding</li>
                <li>• Plumbing failures</li>
              </ul>
            </div>
          </div>
        </ScrollAnimation>
      </div>

      <!-- Emergency CTA -->
      <ScrollAnimation animation="zoomIn" client:visible>
        <div class="bg-red-600 text-white rounded-xl p-8 text-center">
          <h2 class="text-3xl font-bold mb-4">
            Don't Wait - Water Damage Worsens Every Hour
          </h2>
          <p class="text-xl mb-6 opacity-90">
            Our emergency team is standing by to help you NOW
          </p>
          <a href="tel:4375450067" class="bg-white text-red-600 px-8 py-4 rounded-lg font-bold text-xl hover:bg-gray-100 transition-colors inline-flex items-center gap-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            EMERGENCY LINE: (437) 545-0067
          </a>
          <p class="mt-4 text-sm opacity-80">
            Available 24 hours a day, 7 days a week, 365 days a year
          </p>
        </div>
      </ScrollAnimation>
    </div>
  </section>
</BaseLayout>