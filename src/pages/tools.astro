---
import BaseLayout from '../layouts/BaseLayout.astro';
import { ScrollAnimation } from '../components/ScrollAnimation';
---

<BaseLayout 
  title="Free Waterproofing Tools & Calculators - DrySpace"
  description="Free online tools for waterproofing cost estimates, problem diagnosis, ROI calculations, and more. Get instant answers for your Toronto home."
>
  <section class="py-12">
    <div class="container mx-auto px-4">
      <!-- Hero Section -->
      <ScrollAnimation animation="fadeUp" client:visible>
        <div class="text-center mb-12">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
            Free Waterproofing Tools & Calculators
