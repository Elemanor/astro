      <!-- Additional Tools -->
      <div class="mb-16">
        <ScrollAnimation animation="fadeUp" client:visible>
          <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">More Helpful Tools</h2>
        </ScrollAnimation>
        
        <div class="grid md:grid-cols-3 gap-6">
          {[
            {
              icon: "üìä",
              title: "ROI Calculator",
              description: "Calculate the return on investment for waterproofing vs. potential damage costs",
              link: "/tools/roi-calculator",
              color: "purple"
            },
            {
              icon: "üìã",
              title: "Inspection Checklist",
              description: "DIY inspection guide to assess your basement's waterproofing needs",
              link: "/tools/inspection-checklist",
              color: "orange"
            },
            {
              icon: "üåßÔ∏è",
              title: "Drainage Calculator",
              description: "Determine proper drainage requirements for your property size",
              link: "/tools/drainage-calculator",
              color: "blue"
            },
            {
              icon: "üíß",
              title: "Sump Pump Sizer",
              description: "Calculate the right sump pump size for your basement",
              link: "/tools/sump-pump-sizer",
              color: "red"
            },
            {
              icon: "üè†",
              title: "Home Value Impact",
              description: "See how waterproofing affects your Toronto home's value",
              link: "/tools/home-value-calculator",
              color: "green"
            },
            {
              icon: "üìÖ",
              title: "Maintenance Scheduler",
              description: "Create a custom maintenance schedule for your system",
              link: "/tools/maintenance-scheduler",
              color: "indigo"
            }
          ].map((tool, index) => (
            <ScrollAnimation animation="fadeUp" delay={index * 0.1} client:visible>
              <a href={tool.link} class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-all group">
                <div class="text-4xl mb-4">{tool.icon}</div>
                <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary transition-colors">
                  {tool.title}
                </h3>
                <p class="text-gray-600 mb-4">{tool.description}</p>
                <div class="flex items-center gap-2 text-primary font-semibold">
                  <span>Use tool</span>
                  <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </a>
            </ScrollAnimation>
          ))}
        </div>
      </div>

      <!-- How Tools Help -->
      <div class="bg-gray-50 rounded-xl p-8 md:p-12 mb-16">
        <ScrollAnimation animation="fadeUp" client:visible>
          <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">How Our Tools Help You</h2>
        </ScrollAnimation>
        
        <div class="grid md:grid-cols-3 gap-8">
