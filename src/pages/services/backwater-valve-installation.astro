  <div slot="mainContent" set:html={mainContent} />
</ServicePageTemplateV3>

<style>
  /* Preserved styles from original page */
  :global(.toronto-hero-banner) {
    background: #f7fafc;
    padding: 2rem;
    border-radius: 0.5rem;
    margin-bottom: 2rem;
  }

  :global(.trust-signals-toronto) {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 1.5rem;
  }

  :global(.trust-signals-toronto span) {
    background: #f97316;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-weight: 600;
  }

  :global(.toronto-service-grid) {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
  }

  :global(.toronto-area-card) {
    background: white;
    border: 1px solid #e2e8f0;
    padding: 1.5rem;
    border-radius: 0.5rem;
  }

  :global(.toronto-area-card h3) {
    color: #1a202c;
    margin-bottom: 0.5rem;
  }

  :global(.cost-range) {
    display: inline-block;
    background: #f0fdf4;
    color: #166534;
    padding: 0.25rem 0.75rem;
    border-radius: 0.25rem;
    font-weight: 600;
    margin-top: 0.5rem;
  }

  :global(.toronto-cta-section) {
    display: flex;
    gap: 1rem;
    margin: 2rem 0;
    flex-wrap: wrap;
  }

  :global(.toronto-primary-cta) {
    background: #f97316;
    color: white;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.125rem;
  }

  :global(.toronto-secondary-cta) {
    border: 2px solid #f97316;
    color: #f97316;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
  }

  :global(.toronto-guarantee-badges) {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 1.5rem;
  }

  :global(.toronto-guarantee-badges span) {
    color: #10b981;
    font-weight: 600;
  }
</style>