      <p class="mt-4"><strong>Emergency Hotline: (437) 545-0067</strong> - Available 24/7 throughout Toronto</p>
    </CalloutBox>

    <!-- Toronto Neighborhoods Grid -->
    <FeatureGrid 
      title="Toronto Neighborhood Specialists"
      subtitle="Customized solutions for every Toronto area"
      features={torontoNeighborhoods}
      variant="bento"
      backgroundPattern={true}
    />

    <!-- Waterproofing Solutions Process -->
    <ProcessList 
      title="Complete Toronto Waterproofing Solutions"
      subtitle="Proven systems designed for Toronto's unique challenges"
      items={waterproofingSolutions}
      variant="timeline"
      showImages={true}
      numbered={true}
    />

    <!-- Video Section -->
