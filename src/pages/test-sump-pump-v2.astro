---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const serviceName = "Sump Pump Installation";
const serviceTitle = "Sump Pump Guide Toronto";
const serviceSubtitle = "Professional Installation Service";
const serviceDescription = "Complete sump pump guide for Toronto homeowners";
const startingPrice = "$1,200";

const faqs = [
  {
    question: "What is a sump pump?",
    answer: "A sump pump is an automatic water removal device"
  }
];
---

<BaseLayout title={serviceName}>
  <Header />
  
  <section class="service-hero">
    <div class="container">
      <h1>{serviceTitle}</h1>
      <p>{serviceSubtitle}</p>
      <p>{serviceDescription}</p>
      
      <div class="hero-stats">
        <div class="stat-card">
          <span class="stat-value">{startingPrice}</span>
          <span class="stat-label">Starting Price</span>
        </div>
      </div>
    </div>
  </section>
  
  <section class="faq-section">
    <div class="container">
      <h2>FAQs</h2>
      {faqs.map((faq) => (
        <div class="faq-item">
          <h3>{faq.question}</h3>
          <p>{faq.answer}</p>
        </div>
      ))}
    </div>
  </section>
  
  <Footer />
</BaseLayout>

<style>
  .service-hero {
    padding: 4rem 0;
    background: #f7fafc;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
</style>