---
import BaseLayout from './BaseLayout.astro';
import { Navigation } from '../components/Navigation';
import Footer from '../components/Footer.astro';
import StickyCTA from '../components/StickyCTA.astro';
import { ScrollAnimation } from '../components/ScrollAnimation';
import { Button } from '../components/ui/button';
import '../styles/globals.css';

export interface Props {
  title: string;
  description: string;
  service?: string;
  price_range?: string;
  image?: string;
  imageAlt?: string;
  keywords?: string;
}

const { 
  title, 
  description, 
  service, 
  price_range, 
  image, 
  imageAlt,
  keywords 
} = Astro.props;

const breadcrumbs = [
  { name: 'Home', href: '/' },
  { name: 'Services', href: '/services' },
  { name: service || title, href: '#' }
];
---

<BaseLayout title={title} description={description} keywords={keywords}>
  <Navigation client:load />
  
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-gray-50 to-white pt-24 pb-12 lg:pt-32 lg:pb-16">
    <div class="absolute inset-0 opacity-5" 
         style="background-image: radial-gradient(circle at 1px 1px, black 1px, transparent 1px); background-size: 40px 40px;">
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumbs -->
      <nav class="mb-8">
        <ol class="flex items-center space-x-2 text-sm">
          {breadcrumbs.map((item, index) => (
            <li class="flex items-center">
              {index > 0 && (
                <svg class="w-4 h-4 mx-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              )}
              {index < breadcrumbs.length - 1 ? (
                <a href={item.href} class="text-gray-600 hover:text-primary transition-colors">
                  {item.name}
                </a>
              ) : (
                <span class="text-gray-900 font-medium">{item.name}</span>
              )}
            </li>
          ))}
        </ol>
      </nav>
      
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <ScrollAnimation animation="fadeUp" client:visible>
          <div>
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
              {title}
            </h1>
            <p class="text-xl text-gray-600 mb-8">
              {description}
            </p>
            
            {price_range && (
              <div class="bg-primary/10 border border-primary/20 rounded-lg p-6 mb-8">
                <p class="text-sm text-gray-600 mb-2">Investment Range</p>
                <p class="text-3xl font-bold text-primary">{price_range}</p>
                <p class="text-sm text-gray-600 mt-2">Lifetime warranty available</p>
              </div>
            )}
            
            <div class="flex flex-col sm:flex-row gap-4">
              <Button size="lg" class="text-lg px-8">
                Get Free Assessment
              </Button>
              <Button size="lg" variant="outline" class="text-lg px-8">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                (437) 545-0067
              </Button>
            </div>
          </div>
        </ScrollAnimation>
        
        {image && (
          <ScrollAnimation animation="fadeRight" delay={0.2} client:visible>
            <div class="relative rounded-lg overflow-hidden shadow-2xl">
              <img src={image} alt={imageAlt || title} class="w-full h-full object-cover" />
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
            </div>
          </ScrollAnimation>
        )}
      </div>
    </div>
  </section>
  
  <!-- Main Content -->
  <section class="py-12 lg:py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <article class="prose prose-lg max-w-none">
        <slot />
      </article>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="bg-primary text-white py-16 lg:py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <ScrollAnimation animation="zoomIn" client:visible>
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-6">
          Ready to Protect Your Home?
        </h2>
        <p class="text-xl mb-8 opacity-90">
          Get a free assessment from Toronto's most trusted waterproofing experts
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button size="lg" variant="secondary" class="text-lg px-8">
            Schedule Free Assessment
          </Button>
          <Button size="lg" variant="outline" class="text-lg px-8 bg-white/10 text-white border-white hover:bg-white hover:text-primary">
            Call (437) 545-0067
          </Button>
        </div>
        <p class="mt-6 text-sm opacity-75">
          24/7 Emergency Service • Lifetime Warranty • 0% Financing Available
        </p>
      </ScrollAnimation>
    </div>
  </section>
  
  <Footer />
  <StickyCTA />
</BaseLayout>

<style>
  /* Prose customization for better readability */
  .prose {
    @apply text-gray-700;
  }
  
  .prose h2 {
    @apply text-3xl font-bold text-gray-900 mt-12 mb-6;
  }
  
  .prose h3 {
    @apply text-2xl font-semibold text-gray-900 mt-8 mb-4;
  }
  
  .prose h4 {
    @apply text-xl font-semibold text-gray-900 mt-6 mb-3;
  }
  
  .prose a {
    @apply text-primary hover:text-primary/80 transition-colors;
  }
  
  .prose ul {
    @apply my-6;
  }
  
  .prose li {
    @apply my-2;
  }
  
  .prose strong {
    @apply font-semibold text-gray-900;
  }
  
  .prose table {
    @apply w-full my-8 border-collapse;
  }
  
  .prose th {
    @apply bg-gray-100 p-4 text-left font-semibold border border-gray-300;
  }
  
  .prose td {
    @apply p-4 border border-gray-300;
  }
</style>