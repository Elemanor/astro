---
import Section from '../ui/Section.astro';
import AstroButton from '../ui/AstroButton.astro';
import { ArrowRight, Phone, AlertCircle } from 'lucide-react';

export interface Props {
  title?: string;
  subtitle?: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
  emergencyNotice?: string;
}

const {
  title = "Ready to Protect Your Property?",
  subtitle = "Don't wait until it's too late. Get professional waterproofing solutions today.",
  primaryCTA = {
    text: "Schedule Free Inspection",
    href: "/contact/"
  },
  secondaryCTA = {
    text: "(437) 545-0067",
    href: "tel:437-545-0067"
  },
  emergencyNotice = "Emergency service available 24/7"
} = Astro.props;
---

<Section background="secondary" spacing="large">
  <div class="text-center space-y-6">
    <h2 class="text-4xl font-bold text-white">
      {title}
    </h2>
    <p class="text-xl text-white/90 max-w-2xl mx-auto">
      {subtitle}
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <AstroButton 
        href={primaryCTA.href}
        size="lg"
        class="bg-white text-secondary hover:bg-gray-100 gap-2"
      >
        {primaryCTA.text}
        <ArrowRight className="h-5 w-5" client:load />
      </AstroButton>
      <AstroButton 
        href={secondaryCTA.href}
        variant="outline" 
        size="lg"
        class="border-white text-white hover:bg-white/10 gap-2"
      >
        <Phone className="h-5 w-5" client:load />
        {secondaryCTA.text}
      </AstroButton>
    </div>
    
    {emergencyNotice && (
      <div class="flex items-center justify-center gap-2 text-white/75 text-sm">
        <AlertCircle className="h-4 w-4" client:load />
        <span>{emergencyNotice}</span>
      </div>
    )}
  </div>
</Section>