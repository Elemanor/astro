---
import Section from '../ui/Section.astro';
import Grid from '../ui/Grid.astro';
import { Shield, Award, Clock, CheckCircle } from 'lucide-react';

export interface TrustSignal {
  icon: string;
  text: string;
}

export interface Props {
  signals?: TrustSignal[];
}

const defaultSignals: TrustSignal[] = [
  { icon: 'shield', text: 'Licensed & Insured' },
  { icon: 'award', text: '25+ Years Experience' },
  { icon: 'clock', text: 'Same Day Service' },
  { icon: 'check', text: 'Lifetime Warranty' }
];

const { signals = defaultSignals } = Astro.props;
---

<Section spacing="small" background="muted">
  <Grid columns={signals.length} gap="small">
    {signals.map((signal) => (
      <div class="text-center">
        {signal.icon === 'shield' && <Shield className="h-8 w-8 text-primary mx-auto mb-2" client:load />}
        {signal.icon === 'award' && <Award className="h-8 w-8 text-primary mx-auto mb-2" client:load />}
        {signal.icon === 'clock' && <Clock className="h-8 w-8 text-primary mx-auto mb-2" client:load />}
        {signal.icon === 'check' && <CheckCircle className="h-8 w-8 text-primary mx-auto mb-2" client:load />}
        {!['shield', 'award', 'clock', 'check'].includes(signal.icon) && <Shield className="h-8 w-8 text-primary mx-auto mb-2" client:load />}
        <p class="font-semibold">{signal.text}</p>
      </div>
    ))}
  </Grid>
</Section>