---
import Hero from '../ui/Hero.astro';

export interface Props {
  serviceName: string;
  subtitle: string;
  description: string;
  badge?: string;
  image?: string;
  imageAlt?: string;
  features?: string[];
}

const {
  serviceName,
  subtitle,
  description,
  badge = "Professional Service",
  image,
  imageAlt,
  features = []
} = Astro.props;
---

<Hero
  title={serviceName}
  subtitle={subtitle}
  description={description}
  badge={badge}
  image={image}
  imageAlt={imageAlt || `${serviceName} service in Toronto`}
  features={features}
  primaryCTA={{ text: "Get Free Quote", href: "/contact/" }}
  secondaryCTA={{ text: "Call Now", href: "tel:437-545-0067" }}
/>