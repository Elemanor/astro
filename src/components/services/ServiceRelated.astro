---
import Section from '../ui/Section.astro';
import Grid from '../ui/Grid.astro';
import ContentCard from '../ui/ContentCard.astro';

export interface RelatedService {
  title: string;
  url: string;
  description: string;
  image?: string;
}

export interface Props {
  services: RelatedService[];
  title?: string;
  subtitle?: string;
  columns?: number;
}

const {
  services,
  title = "Related Services",
  subtitle = "Explore our other professional waterproofing solutions",
  columns = 3
} = Astro.props;
---

{services.length > 0 && (
  <Section
    title={title}
    subtitle={subtitle}
  >
    <Grid columns={columns}>
      {services.map(service => (
        <ContentCard
          title={service.title}
          description={service.description}
          href={service.url}
          image={service.image}
          type="service"
        />
      ))}
    </Grid>
  </Section>
)}