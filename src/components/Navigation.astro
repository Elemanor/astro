---
const navItems = [
  { label: 'Services', href: '/services' },
  { label: 'Guides', href: '/guides' },
  { label: 'Process', href: '/process' },
  { label: 'Warranty', href: '/warranty' },
  { label: 'About', href: '/about' },
  { label: 'Reviews', href: '/reviews' },
];
---

<!-- Emergency Banner -->
<div class="bg-gray-900 text-white py-2 sm:py-3 text-center px-4">
  <p class="text-xs sm:text-sm font-medium">
    Experiencing basement flooding? Call 24/7: <span class="font-semibold">(437) 545-0067</span>
  </p>
</div>

<!-- Navigation -->
<nav class="bg-white sticky top-0 z-50 shadow-sm">
  <!-- Mobile Navigation -->
  <div class="lg:hidden">
    <div class="px-4 py-3">
      <div class="flex items-center justify-between">
        <a href="/" class="flex items-center">
          <span class="text-xl font-montserrat">
            Dry<span class="font-bold">Space</span>
          </span>
        </a>
        
        <div class="flex items-center gap-2">
          <a href="tel:4375450067" class="text-sm text-red-600 font-bold flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Emergency
          </a>
          
          <!-- Mobile menu toggle -->
          <button 
            id="mobile-menu-toggle"
            class="p-2 hover:bg-gray-100 rounded-lg transition-colors"
            aria-label="Toggle menu"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
            </svg>
          </button>
        </div>
      </div>
      
      <!-- Mobile menu -->
      <div id="mobile-menu" class="hidden mt-4 pb-3">
        <div class="space-y-1">
          {navItems.map((item) => (
            <a 
              href={item.href}
              class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 rounded-md"
            >
              {item.label}
            </a>
          ))}
          <a 
            href="/quote"
            class="block px-3 py-2 text-base font-medium text-white bg-primary hover:bg-primary/90 rounded-md mt-2"
          >
            Get Free Quote
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Desktop Navigation -->
  <div class="hidden lg:block">
    <div class="px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center">
            <a href="/" class="flex items-center">
              <span class="text-2xl font-montserrat">
                Dry<span class="font-bold">Space</span>
              </span>
            </a>
          </div>
          
          <div class="flex items-center gap-8">
            <div class="flex items-center gap-1">
              {navItems.map((item) => (
                <a 
                  href={item.href}
                  class="px-3 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 rounded-md transition-colors"
                >
                  {item.label}
                </a>
              ))}
            </div>
            
            <div class="flex items-center gap-4">
              <a 
                href="/quote"
                class="bg-primary text-white px-4 py-2 text-sm font-semibold hover:bg-primary/90 rounded-md transition-colors"
              >
                Book Free Inspection
              </a>
              <a 
                href="tel:4375450067" 
                class="text-red-600 font-bold text-sm hover:text-red-700 flex items-center gap-2"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span class="hidden xl:inline">(437) 545-0067</span>
                <span class="xl:hidden">Emergency</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  // Simple mobile menu toggle - minimal JS
  const toggle = document.getElementById('mobile-menu-toggle');
  const menu = document.getElementById('mobile-menu');
  
  toggle?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>