---
import { ScrollAnimation } from './ScrollAnimation';
import { Button } from './ui/button';
---

<section class="relative py-16 sm:py-20 lg:py-24 overflow-hidden">
  <!-- Background with gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary via-blue-600 to-primary"></div>
  
  <!-- Pattern overlay -->
  <div 
    class="absolute inset-0 opacity-10"
    style="background-image: url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.4"%3E%3Cpath d="M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"
  ></div>
  
  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <ScrollAnimation animation="fadeUp" client:visible>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6">
        Protect Your Home Today
      </h2>
      <p class="text-lg sm:text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Don't wait for water damage to get worse. Get a free professional assessment and quote from Toronto's most trusted waterproofing experts.
      </p>
    </ScrollAnimation>
    
    <!-- Benefits -->
    <ScrollAnimation animation="fadeUp" delay={0.2} client:visible>
      <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-10 max-w-3xl mx-auto">
        <div class="text-white">
          <div class="text-3xl font-bold mb-1">100%</div>
          <div class="text-sm opacity-90">Free Quote</div>
        </div>
        <div class="text-white">
          <div class="text-3xl font-bold mb-1">24/7</div>
          <div class="text-sm opacity-90">Emergency</div>
        </div>
        <div class="text-white">
          <div class="text-3xl font-bold mb-1">0%</div>
          <div class="text-sm opacity-90">Financing</div>
        </div>
        <div class="text-white">
          <div class="text-3xl font-bold mb-1">∞</div>
          <div class="text-sm opacity-90">Warranty</div>
        </div>
      </div>
    </ScrollAnimation>
    
    <!-- CTAs -->
    <ScrollAnimation animation="zoomIn" delay={0.3} client:visible>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button size="lg" className="bg-white text-primary hover:bg-gray-100">
          Get Free Quote
        </Button>
        <Button size="lg" variant="outline" className="border-white text-white hover:bg-white/10">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call (437) 545-0067
        </Button>
      </div>
    </ScrollAnimation>
    
    <!-- Trust indicator -->
    <ScrollAnimation animation="fadeUp" delay={0.4} client:visible>
      <p class="text-white/80 text-sm mt-8">
        Trusted by 12,847+ homeowners • Average response time: 47 minutes
      </p>
    </ScrollAnimation>
  </div>
</section>