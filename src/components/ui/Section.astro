---
export interface Props {
  title?: string;
  subtitle?: string;
  class?: string;
  containerClass?: string;
  centered?: boolean;
  fullWidth?: boolean;
  background?: 'default' | 'muted' | 'primary' | 'secondary' | 'accent';
  spacing?: 'default' | 'small' | 'large' | 'none';
}

const { 
  title,
  subtitle,
  class: className = '',
  containerClass = '',
  centered = false,
  fullWidth = false,
  background = 'default',
  spacing = 'default'
} = Astro.props;

const backgrounds = {
  default: 'bg-background',
  muted: 'bg-muted',
  primary: 'bg-primary text-primary-foreground',
  secondary: 'bg-secondary text-secondary-foreground', 
  accent: 'bg-accent text-accent-foreground',
  'primary-light': 'bg-primary/10',
  'secondary-light': 'bg-secondary/10',
  'accent-light': 'bg-accent/10'
};

const spacings = {
  none: '',
  small: 'py-8 md:py-12',
  default: 'py-16 md:py-24',
  large: 'py-24 md:py-32'
};
---

<section class={`${spacings[spacing]} ${backgrounds[background]} ${className}`}>
  <div class={`${fullWidth ? '' : 'container mx-auto px-4 md:px-6'} ${containerClass}`}>
    {(title || subtitle) && (
      <div class={`mb-12 ${centered ? 'text-center' : ''}`}>
        {title && (
          <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">
            {title}
          </h2>
        )}
        {subtitle && (
          <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
            {subtitle}
          </p>
        )}
      </div>
    )}
    <slot />
  </div>
</section>