---
export interface Props {
  title: string;
  description: string;
  date?: string;
  author?: string;
  category?: string;
  readTime?: string;
}

const { 
  title, 
  description, 
  date,
  author = "DrySpace Team",
  category = "Waterproofing Tips",
  readTime = "5 min read"
} = Astro.props;

// Format date
const formattedDate = date ? new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}) : '';
---

<style>
  /* Blog Content Styles */
  .blog-content {
    @apply prose prose-lg max-w-none;
  }
  
  .blog-content h2 {
    @apply text-3xl font-bold text-gray-900 mb-4 mt-12;
  }
  
  .blog-content h3 {
    @apply text-2xl font-bold text-gray-900 mb-3 mt-8;
  }
  
  .blog-content h4 {
    @apply text-xl font-semibold text-gray-900 mb-2 mt-6;
  }
  
  .blog-content p {
    @apply text-gray-700 mb-4 leading-relaxed;
  }
  
  .blog-content ul {
    @apply list-disc list-inside space-y-2 mb-6 text-gray-700 ml-4;
  }
  
  .blog-content ol {
    @apply list-decimal list-inside space-y-2 mb-6 text-gray-700 ml-4;
  }
  
  .blog-content a {
    @apply text-primary hover:text-primary/80 underline;
  }
  
  .blog-content blockquote {
    @apply border-l-4 border-primary pl-4 italic text-gray-600 my-6;
  }
  
  .blog-content img {
    @apply rounded-lg shadow-lg my-8;
  }
  
  .blog-content code {
    @apply bg-gray-100 px-2 py-1 rounded text-sm;
  }
  
  .blog-content pre {
    @apply bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto my-6;
  }
  
  /* Table of Contents */
  .toc {
    @apply bg-gray-50 rounded-lg p-6 mb-8;
  }
  
  .toc h2 {
    @apply text-lg font-bold text-gray-900 mb-3;
  }
  
  .toc ul {
    @apply space-y-2;
  }
  
  .toc a {
    @apply text-gray-700 hover:text-primary transition-colors;
  }
  
  /* Call-out Boxes */
  .callout {
    @apply bg-blue-50 border-l-4 border-blue-500 p-4 my-6 rounded-r-lg;
  }
  
  .callout-warning {
    @apply bg-yellow-50 border-l-4 border-yellow-500 p-4 my-6 rounded-r-lg;
  }
  
  .callout-tip {
    @apply bg-green-50 border-l-4 border-green-500 p-4 my-6 rounded-r-lg;
  }
</style>

