---
export interface Props {
  title?: string;
  subtitle?: string;
  variant?: 'default' | 'highlight' | 'warning' | 'info';
  centered?: boolean;
  class?: string;
}

const { 
  title, 
  subtitle, 
  variant = 'default',
  centered = false,
  class: className = '' 
} = Astro.props;

const variantClasses = {
  default: '',
  highlight: 'bg-primary/5 border-l-4 border-primary px-6 py-4',
  warning: 'bg-yellow-50 border-l-4 border-yellow-500 px-6 py-4',
  info: 'bg-blue-50 border-l-4 border-blue-500 px-6 py-4'
};
---

<div class={`content-section my-8 ${variantClasses[variant]} ${className}`}>
  {(title || subtitle) && (
    <div class={`mb-4 ${centered ? 'text-center' : ''}`}>
      {title && <h2 class="text-2xl font-bold text-foreground">{title}</h2>}
      {subtitle && <p class="text-lg text-muted-foreground mt-2">{subtitle}</p>}
    </div>
  )}
  <div class={`prose prose-lg max-w-none ${centered ? 'text-center' : ''}`}>
    <slot />
  </div>
</div>