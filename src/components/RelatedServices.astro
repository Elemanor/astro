---
import { ScrollAnimation } from './ScrollAnimation';

export interface RelatedService {
  title: string;
  url: string;
  image?: string;
}

export interface Props {
  services: RelatedService[];
  title?: string;
}

const { services, title = "Related Services" } = Astro.props;
---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <ScrollAnimation animation="fadeUp" client:visible>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 text-center mb-12">
        {title}
      </h2>
    </ScrollAnimation>
    
    <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {services.map((service, index) => (
        <ScrollAnimation animation="fadeUp" delay={index * 0.1} client:visible>
          <a 
            href={service.url}
            class="group bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow"
          >
            {service.image && (
              <div class="aspect-video overflow-hidden bg-gray-100">
                <img 
                  src={service.image} 
                  alt={service.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                />
              </div>
            )}
            
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 group-hover:text-primary transition-colors">
                {service.title}
              </h3>
              
              <div class="mt-4 flex items-center gap-2 text-primary font-semibold">
                <span>Learn More</span>
                <svg 
                  class="w-4 h-4 group-hover:translate-x-1 transition-transform" 
                  fill="none" 
                  stroke="currentColor" 
                  viewBox="0 0 24 24"
                >
                  <path 
                    stroke-linecap="round" 
                    stroke-linejoin="round" 
                    stroke-width="2" 
                    d="M9 5l7 7-7 7" 
                  />
                </svg>
              </div>
            </div>
          </a>
        </ScrollAnimation>
      ))}
    </div>
  </div>
</section>