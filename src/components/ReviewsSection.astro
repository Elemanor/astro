<section id="reviews-1672" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <span class="text-blue-600 font-semibold uppercase tracking-wider">Testimonials</span>
      <h2 class="text-4xl font-bold mt-2">What Our Customers Say</h2>
