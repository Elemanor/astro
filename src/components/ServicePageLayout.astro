---
export interface Props {
  title: string;
  subtitle?: string;
  description: string;
  relatedServices?: Array<{
    name: string;
    url: string;
    image?: string;
  }>;
  neighborhoods?: Array<{
    name: string;
    areas: string[];
    challenges: string[];
    solutions: string[];
    avg_cost: string;
  }>;
  caseStudies?: Array<{
    location: string;
    year_built: string;
    challenge: string;
    solution: string;
    cost: string;
    timeline: string;
    result: string;
    customer: string;
  }>;
  features?: Array<{
    feature: string;
    description: string;
    areas: string[];
  }>;
  faqs?: Array<{
    question: string;
    answer: string;
  }>;
}

const { 
  title, 
  subtitle, 
  description, 
  relatedServices = [],
  neighborhoods = [],
  caseStudies = [],
  features = [],
  faqs = []
} = Astro.props;
---

<style>
  /* Hero Banner Styles */
  .toronto-hero-banner {
    @apply bg-gradient-to-br from-primary via-blue-600 to-primary text-white rounded-xl p-8 mb-12;
  }
  
  .trust-signals-toronto {
    @apply flex flex-wrap justify-center gap-3 mb-6;
  }
  
  .trust-signals-toronto span {
    @apply bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-semibold;
  }
  
  /* Service Grid Styles */
  .toronto-service-grid {
    @apply grid md:grid-cols-2 gap-4 mb-8;
  }
  
  .toronto-area-card {
    @apply bg-white/10 backdrop-blur-sm rounded-lg p-4 hover:bg-white/20 transition-colors;
  }
  
  .toronto-area-card h3 {
    @apply font-bold text-lg mb-2;
  }
  
  .toronto-area-card .cost-range {
    @apply inline-block mt-2 bg-yellow-400 text-gray-900 px-3 py-1 rounded-full text-sm font-bold;
  }
  
  /* CTA Section Styles */
  .toronto-cta-section {
    @apply flex flex-col sm:flex-row gap-4 justify-center mb-6;
  }
  
  .toronto-primary-cta {
    @apply bg-red-500 hover:bg-red-600 text-white px-6 py-3 rounded-lg font-bold transition-colors inline-flex items-center justify-center gap-2;
  }
  
  .toronto-secondary-cta {
    @apply bg-white text-primary hover:bg-gray-100 px-6 py-3 rounded-lg font-bold transition-colors;
  }
  
  /* Guarantee Badges */
  .toronto-guarantee-badges {
    @apply flex flex-wrap justify-center gap-3 text-sm;
  }
  
  .toronto-guarantee-badges span {
    @apply bg-green-500/20 px-3 py-1 rounded-full;
  }
  
  /* Content Section Styles */
  .service-content h2 {
    @apply text-3xl font-bold text-gray-900 mb-6;
  }
  
  .service-content h3 {
    @apply text-xl font-bold text-gray-900 mb-4;
  }
  
  .service-content p {
    @apply text-gray-700 mb-4 leading-relaxed;
  }
  
  .service-content ul {
    @apply list-disc list-inside space-y-2 mb-6 text-gray-700;
  }
  
  .service-content strong {
    @apply font-semibold text-gray-900;
  }
</style>

<article class="service-page">
  <!-- Hero Section -->
  <div class="toronto-hero-banner">
    <div class="trust-signals-toronto">
      <span class="experience-badge">15+ YEARS EXPERIENCE</span>
      <span class="homes-protected-badge">5,000+ HOMES PROTECTED</span>
      <span class="response-badge">SAME-DAY SERVICE</span>
      <span class="warranty-badge">LIFETIME WARRANTY</span>
    </div>
    
    <h1 class="text-4xl md:text-5xl font-bold text-center mb-4">{title}</h1>
    {subtitle && <p class="text-xl text-center mb-6 opacity-90">{subtitle}</p>}
    <p class="text-lg text-center mb-8 max-w-3xl mx-auto opacity-90">{description}</p>
    
    <!-- Service Area Cards (if neighborhoods exist) -->
    {neighborhoods.length > 0 && (
      <div class="toronto-service-grid">
        {neighborhoods.slice(0, 4).map(area => (
          <div class="toronto-area-card">
            <h3>{area.name}</h3>
            <p class="text-sm opacity-90 mb-2">{area.areas.slice(0, 3).join(' â€¢ ')}</p>
            <span class="cost-range">{area.avg_cost}</span>
          </div>
        ))}
      </div>
    )}
    
    <!-- CTA Section -->
    <div class="toronto-cta-section">
      <a href="tel:4375450067" class="toronto-primary-cta">
        ðŸ“ž CALL NOW: (437) 545-0067
      </a>
      <a href="/contact" class="toronto-secondary-cta">
        Get Free Estimate
      </a>
    </div>
    
    <div class="toronto-guarantee-badges">
      <span>âœ“ Same-Day Service</span>
      <span>âœ“ Lifetime Warranty</span>
      <span>âœ“ Licensed & Insured</span>
      <span>âœ“ 24/7 Emergency</span>
    </div>
  </div>
  
  <!-- Main Content -->
  <div class="service-content prose prose-lg max-w-none">
    <slot />
  </div>
  
  <!-- Neighborhoods Section -->
  {neighborhoods.length > 0 && (
    <section class="my-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Service Areas & Pricing</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {neighborhoods.map(area => (
          <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow">
            <h3 class="text-xl font-bold text-primary mb-3">{area.name}</h3>
            
            <div class="mb-4">
              <p class="text-sm text-gray-600 mb-2"><strong>Areas:</strong></p>
              <div class="flex flex-wrap gap-2">
                {area.areas.map(location => (
                  <span class="bg-gray-100 px-3 py-1 rounded-full text-sm">{location}</span>
                ))}
              </div>
            </div>
            
            <div class="mb-4">
              <p class="text-sm text-gray-600 mb-2"><strong>Common Challenges:</strong></p>
              <ul class="text-sm space-y-1">
                {area.challenges.map(challenge => (
                  <li class="flex items-start gap-2">
                    <span class="text-red-500 mt-1">â€¢</span>
                    <span>{challenge}</span>
                  </li>
                ))}
              </ul>
            </div>
            
            <div class="mb-4">
              <p class="text-sm text-gray-600 mb-2"><strong>Our Solutions:</strong></p>
              <ul class="text-sm space-y-1">
                {area.solutions.map(solution => (
                  <li class="flex items-start gap-2">
                    <span class="text-green-500 mt-1">âœ“</span>
                    <span>{solution}</span>
                  </li>
                ))}
              </ul>
            </div>
            
            <div class="mt-4 pt-4 border-t">
              <span class="text-2xl font-bold text-primary">{area.avg_cost}</span>
              <span class="text-sm text-gray-600 ml-2">Average Cost</span>
            </div>
          </div>
        ))}
      </div>
    </section>
  )}
  
  <!-- Case Studies Section -->
  {caseStudies.length > 0 && (
    <section class="my-12 bg-gray-50 rounded-xl p-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Success Stories</h2>
      <div class="space-y-6">
        {caseStudies.map(study => (
          <div class="bg-white rounded-lg p-6 shadow hover:shadow-lg transition-shadow">
            <div class="grid md:grid-cols-3 gap-4 mb-4">
              <div>
                <p class="text-sm text-gray-600">Location</p>
                <p class="font-semibold">{study.location}</p>
              </div>
              <div>
                <p class="text-sm text-gray-600">Property Age</p>
                <p class="font-semibold">Built {study.year_built}</p>
              </div>
              <div>
                <p class="text-sm text-gray-600">Project Timeline</p>
                <p class="font-semibold">{study.timeline}</p>
              </div>
            </div>
            
            <div class="space-y-3">
              <div>
                <p class="font-semibold text-gray-900 mb-1">Challenge:</p>
                <p class="text-gray-700">{study.challenge}</p>
              </div>
              
              <div>
                <p class="font-semibold text-gray-900 mb-1">Solution:</p>
                <p class="text-gray-700">{study.solution}</p>
              </div>
              
              <div>
                <p class="font-semibold text-gray-900 mb-1">Result:</p>
                <p class="text-gray-700">{study.result}</p>
              </div>
            </div>
            
            <div class="mt-4 pt-4 border-t flex items-center justify-between">
              <div>
                <span class="text-2xl font-bold text-primary">{study.cost}</span>
                <span class="text-sm text-gray-600 ml-2">Total Investment</span>
              </div>
              <div class="text-right">
                <p class="text-sm text-gray-600">Customer</p>
                <p class="font-semibold">{study.customer}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>
  )}
  
  <!-- Special Features Section -->
  {features.length > 0 && (
    <section class="my-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Toronto-Specific Solutions</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {features.map(feature => (
          <div class="flex gap-4 bg-white rounded-lg p-6 shadow hover:shadow-lg transition-shadow">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-primary text-white rounded-full flex items-center justify-center text-xl font-bold">
                âœ“
              </div>
            </div>
            <div>
              <h3 class="font-bold text-lg text-gray-900 mb-2">{feature.feature}</h3>
              <p class="text-gray-700 mb-3">{feature.description}</p>
              <div class="flex flex-wrap gap-2">
                {feature.areas.map(area => (
                  <span class="bg-primary/10 text-primary px-3 py-1 rounded-full text-xs font-semibold">
                    {area}
                  </span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>
  )}
  
  <!-- Related Services Section -->
  {relatedServices.length > 0 && (
    <section class="my-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Related Services</h2>
      <div class="grid md:grid-cols-3 gap-6">
        {relatedServices.map(service => (
          <a href={service.url} class="group">
            <div class="bg-white rounded-lg shadow hover:shadow-xl transition-all overflow-hidden">
              {service.image && (
                <div class="h-48 bg-gray-200 overflow-hidden">
                  <img 
                    src={service.image} 
                    alt={service.name}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                  />
                </div>
              )}
              <div class="p-6">
                <h3 class="font-bold text-lg text-gray-900 group-hover:text-primary transition-colors">
                  {service.name}
                </h3>
                <p class="text-primary font-semibold mt-2">Learn More â†’</p>
              </div>
            </div>
          </a>
        ))}
      </div>
    </section>
  )}
  
  <!-- FAQ Section -->
  {faqs.length > 0 && (
    <section class="my-12 bg-gray-50 rounded-xl p-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Frequently Asked Questions</h2>
      <div class="space-y-6 max-w-4xl mx-auto">
        {faqs.map(faq => (
          <div class="bg-white rounded-lg p-6 shadow hover:shadow-lg transition-shadow">
            <h3 class="font-bold text-lg text-gray-900 mb-3">{faq.question}</h3>
            <p class="text-gray-700 leading-relaxed">{faq.answer}</p>
          </div>
        ))}
      </div>
    </section>
  )}
  
  <!-- Final CTA -->
  <section class="my-12 bg-primary text-white rounded-xl p-8 text-center">
    <h2 class="text-3xl font-bold mb-4">Ready to Protect Your Home?</h2>
    <p class="text-xl mb-6 opacity-90">Get your free estimate today from Toronto's most trusted waterproofing experts</p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="tel:4375450067" class="bg-white text-primary px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors inline-flex items-center justify-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        Call Now: (437) 545-0067
      </a>
      <a href="/contact" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-primary transition-all">
        Schedule Free Inspection
      </a>
    </div>
  </section>
</article>